<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.popularmoviesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.popularmoviesapp.actvitiy.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityFragmentPackage.Setting.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.android.popularmoviesapp.actvitiy.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.popularmoviesapp.actvitiy.MainActivity" />
        </activity>
        <activity
            android:name="com.example.android.popularmoviesapp.actvitiy.DetailsActivity"
            android:label="@string/title_details_activity"
            android:parentActivityName="com.example.android.popularmoviesapp.actvitiy.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.popularmoviesapp.actvitiy.DetailsActivity" />
        </activity>
    </application>

</manifest>